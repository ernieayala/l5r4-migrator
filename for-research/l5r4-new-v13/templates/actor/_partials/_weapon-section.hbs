<section class="flexcol -gap-sm">
  <div class="flexrow -gap-sm section-title" data-scope="weapons">
    <h4 class="title">{{localize "l5r4.ui.sheets.weapons"}}</h4>
    {{> "systems/l5r4/templates/actor/_partials/_unified-item-create.hbs"}}
    {{> "systems/l5r4/templates/actor/_partials/_expand.hbs"}}
  </div>
  <section class="item-list -weapon -header" data-scope="weapons">
    <div class="item">
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="name">{{localize "l5r4.ui.common.name"}}</a>
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="damage">{{localize "l5r4.ui.mechanics.combat.attack"}}</a>
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="damage">{{localize "l5r4.ui.common.damage"}}</a>
      <span></span>
    </div>
  </section>
  <section class="item-list -weapon" data-scope="weapons">
    {{#each weapons as |weapon id|}}
      {{> "systems/l5r4/templates/cards/weapon.hbs"
          system=weapon.system
          inSheet=true
          ranged=weapon.system.isBow
          docId=weapon.id}}
    {{/each}}
  </section>
</section>
