{
  "name": "l5r4",
  "version": "2.0.0",
  "description": "Legend of the Five Rings 4e Enhanced system for Foundry VTT",
  "author": "Ernie Ayala",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernieayala/l5r4.git"
  },
  "bugs": {
    "url": "https://github.com/ernieayala/l5r4/issues"
  },
  "homepage": "https://github.com/ernieayala/l5r4#readme",
  "scripts": {
    "build:css": "sass --no-source-map scss/l5r4-enhanced.scss dist/l5r4-enhanced.css",
    "watch:css": "sass --no-source-map --watch scss/l5r4-enhanced.scss:dist/l5r4-enhanced.css",
    "build": "npm run build:css",
    "dev": "npm run watch:css",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "prepare-release": "node scripts/prepare-release.js",
    "validate": "node scripts/prepare-release.js --validate-only",
    "madge:check": "madge --circular module/",
    "madge:summary": "madge --summary module/",
    "madge:json": "madge --json module/ > madge-analysis.json",
    "pretest": "npm run madge:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "1.0.0",
    "@vitest/ui": "1.0.0",
    "happy-dom": "12.10.3",
    "madge": "8.0.0",
    "sass": "1.69.5",
    "vitest": "1.0.0"
  }
}
