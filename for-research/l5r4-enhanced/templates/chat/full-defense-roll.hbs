<div class="l5r4-chat-card">
  <header class="card-header">
    <h5 class="card-title">{{localize "l5r4.ui.mechanics.stances.fullDefense"}}</h5>
  </header>
  <div class="card-content">
    {{#if rollHtml}}
      <div class="dice-roll">
        {{{rollHtml}}}
      </div>
    {{/if}}
    <div class="roll-details">
      <p class="armor-bonus">
        <label>{{localize "l5r4.ui.mechanics.combat.armorTnBonus"}}:</label>
        <span class="bonus-value">+{{armorBonus}}</span>
      </p>
    </div>
    <div class="stance-description">
      <p class="description-text">
        {{localize "l5r4.ui.mechanics.stances.fullDefenseDescription"}}
      </p>
    </div>
  </div>
</div>
