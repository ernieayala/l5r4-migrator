<section class="standard-form">
  <div class="form-group">
    <label>{{localize "l5r4.ui.common.type"}}</label>
    <div class="form-fields">
      <select name="system.type">
        {{selectOptions config.advantageTypes selected=system.type localize=true}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "l5r4.ui.common.cost"}}</label>
    <div class="form-fields">
      <input name="system.cost" type="number" min="0" value="{{system.cost}}" data-type="Number" />
    </div>
  </div>
  {{#if (eq system.type "ancestor")}}
    <div class="form-group">
      <label>{{localize "l5r4.ui.common.clan"}}</label>
      <div class="form-fields">
        <input name="system.clan" type="text" value="{{system.clan}}" data-type="String" />
      </div>
    </div>
  {{/if}}
</section>
{{#if (eq system.type "ancestor")}}
  <h4 class="prose-title">{{localize "l5r4.ui.sheets.demands"}}</h4>
  {{#if editable}}
    <prose-mirror name="system.demands" value="{{ system.demands }}" document-uuid="{{ item.uuid }}" class="sized" compact>
      {{{ enriched.demands }}}
    </prose-mirror>
  {{else}}
    <div class="editor editor-content">
      {{{ enriched.demands }}}
    </div>
  {{/if}}
{{/if}}
{{> (concat "systems/" SYS_ID "/templates/item/_partials/_rules-summary.hbs") }}
