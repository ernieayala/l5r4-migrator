<section class="standard-form">
  <div class="form-group">
    <label>{{localize "l5r4.ui.common.ring"}}</label>
    <div class="form-fields">
      <select name="system.ring">
        {{selectOptions config.spellRings selected=system.ring localize=true}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "l5r4.magic.spells.maho"}}</label>
    <div class="form-fields">
      <input name="system.maho" type="checkbox" {{checked system.maho}} data-type="Boolean" />
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "l5r4.ui.common.mastery"}}</label>
    <div class="form-fields">
      <input name="system.mastery" type="number" value="{{system.mastery}}" data-type="Number" />
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "l5r4.magic.spells.range"}}</label>
    <div class="form-fields">
      <input name="system.range" type="text" value="{{system.range}}" data-type="String" />
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "l5r4.magic.spells.aoe"}}</label>
    <div class="form-fields">
      <input name="system.aoe" type="text" value="{{system.aoe}}" data-type="String" />
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "l5r4.magic.spells.duration"}}</label>
    <div class="form-fields">
      <input name="system.duration" type="text" value="{{system.duration}}" data-type="String" />
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "l5r4.magic.spells.raises"}}</label>
    <div class="form-fields">
      <textarea name="system.raises">{{system.raises}}</textarea>
    </div>
  </div>
</section>
{{> (concat "systems/" SYS_ID "/templates/item/_partials/_rules-summary.hbs") }}
