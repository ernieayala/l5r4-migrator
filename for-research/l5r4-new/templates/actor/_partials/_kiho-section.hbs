<section class="flexcol -gap-sm">
  <div class="flexrow -gap-sm section-title" data-scope="kihos">
    <h4 class="title">{{localize "l5r4.ui.sheets.kiho"}}</h4>
    {{> "systems/l5r4/templates/actor/_partials/_unified-item-create.hbs"}}
    {{> "systems/l5r4/templates/actor/_partials/_expand.hbs"}}
  </div>
  <section class="item-list -kiho -header" data-scope="kihos">
    <div class="item">
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="name">{{localize "l5r4.ui.common.name"}}</a>
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="ring">{{localize "l5r4.ui.common.ring"}}</a>
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="mastery">{{localize "l5r4.ui.common.mastery"}}</a>
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="type">{{localize "l5r4.ui.common.type"}}</a>
      <span></span>
    </div>
  </section>
  <section class="item-list -kiho">
    {{#each kihos as |kiho id|}}
      {{> "systems/l5r4/templates/cards/kiho.hbs" system=kiho.system inSheet=true docId=kiho.id}}
    {{/each}}
  </section>
</section>
