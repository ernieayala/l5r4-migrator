<section class="flexcol -gap-sm">
  <div class="flexrow -gap-sm section-title" data-scope="techniques">
    <h4 class="title">{{localize "l5r4.ui.sheets.techniques"}}</h4>
    {{> "systems/l5r4/templates/actor/_partials/_unified-item-create.hbs"}}
    {{> "systems/l5r4/templates/actor/_partials/_expand.hbs"}}
  </div>
  <section class="item-list -technique -header" data-scope="techniques">
    <div class="item">
      <a class="item-sort-by" data-action="item-sort-by" data-sortby="name">{{localize "l5r4.ui.common.name"}}</a>
    </div>
  </section>
  <section class="item-list -technique">
    {{#each techniques as |technique id|}}
      {{> "systems/l5r4/templates/cards/technique.hbs" system=technique.system inSheet=true docId=technique.id}}
    {{/each}}
  </section>
</section>
