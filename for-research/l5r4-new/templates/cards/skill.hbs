<div class="item -{{type}}{{#if (or system.description system.specialRules)}} -expandable{{/if}}"
  data-item-id="{{coalesce docId this.id _id}}"
  data-document-id="{{coalesce docId this.id _id}}">
  <h4 class="flexrow -gap-sm title">
    {{#if inSheet}}
      <a data-action="item-chat" title="{{name}}">{{name}}</a>
      {{#if system.school}}
        <img class="flex0" width="16px" height="16px" src="{{img}}" />
      {{/if}}
    {{else}}
      {{name}}
    {{/if}}
  </h4>
  {{#if inSheet}}
    <div>{{system.rank}}</div>
    <div>
      <select data-action="inline-edit" data-field="system.trait" data-dtype="String">
        {{selectOptions @root.config.traits selected=system.trait localize=true}}
      </select>
    </div>
    <div><a class="button" data-action="roll-skill" title="{{localize "l5r4.ui.mechanics.rolls.skillRoll"}}">{{system.rollDice}}k{{system.rollKeep}}</a></div>
    <div>{{system.emphasis}}</div>
    {{> "systems/l5r4/templates/cards/_partials/_expand.hbs"}}
    {{#if (or system.description system.specialRules (and (gte system.rank 3) system.mastery3) (and (gte system.rank 5) system.mastery5) (and (gte system.rank 7) system.mastery7))}}
      <div class="expanded-text">
        {{#if (and (gte system.rank 3) system.mastery3)}}
          <p><strong>{{localize "l5r4.character.skills.properties.mastery3"}}:</strong> {{system.mastery3}}</p>
        {{/if}}
        {{#if (and (gte system.rank 5) system.mastery5)}}
          <p><strong>{{localize "l5r4.character.skills.properties.mastery5"}}:</strong> {{system.mastery5}}</p>
        {{/if}}
        {{#if (and (gte system.rank 7) system.mastery7)}}
          <p><strong>{{localize "l5r4.character.skills.properties.mastery7"}}:</strong> {{system.mastery7}}</p>
        {{/if}}
        {{#if system.specialRules}}
          <p>{{{system.specialRules}}}</p>
        {{/if}}
        {{#if system.description}}
          <p>{{{system.description}}}</p>
        {{/if}}
      </div>
    {{/if}}
  {{/if}}
  {{#unless inSheet}}
    <p><strong>{{localize "l5r4.character.skills.properties.trait"}}:</strong> {{localize (concat "l5r4.ui.mechanics.traits." system.trait)}}</p>
    <p><strong>{{localize "l5r4.character.skills.properties.type"}}:</strong> {{localize (concat "l5r4.character.skillTypes." system.type)}}</p>
    {{#if system.specialRules}}
      <h5>{{localize "l5r4.ui.sheets.rulesSummary"}}</h5>
      <p>
        {{{system.specialRules}}}
      </p>
    {{/if}}
    {{#if (and (gte system.rank 3) system.mastery3)}}
      <h5>{{localize "l5r4.character.skills.properties.mastery3"}}</h5>
      <p>
        {{{system.mastery3}}}
      </p>
    {{/if}}
    {{#if system.mastery5}}
      <h5>{{localize "l5r4.character.skills.properties.mastery5"}}</h5>
      <p>
        {{{system.mastery5}}}
      </p>
    {{/if}}
    {{#if system.mastery7}}
      <h5>{{localize "l5r4.character.skills.properties.mastery7"}}</h5>
      <p>
        {{{system.mastery7}}}
      </p>
    {{/if}}
    {{#if system.description}}
      <h5>{{localize "l5r4.ui.sheets.description"}}</h5>
      <p>
        {{{system.description}}}
      </p>
    {{/if}}
  {{/unless}}
</div>
