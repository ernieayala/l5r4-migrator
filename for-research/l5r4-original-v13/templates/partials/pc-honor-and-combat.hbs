<section class="ranks">
  <div class="rank-name">
    {{localize "l5r4.ranks.honorRank"}}
    <input name="system.honor.rank" type="number" value="{{system.honor.rank}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.honorPoints"}}
    <input name="system.honor.points" type="number" value="{{system.honor.points}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.gloryRank"}}
    <input name="system.glory.rank" type="number" value="{{system.glory.rank}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.gloryPoints"}}
    <input name="system.glory.points" type="number" value="{{system.glory.points}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.statusRank"}}
    <input name="system.status.rank" type="number" value="{{system.status.rank}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.statusPoints"}}
    <input name="system.status.points" type="number" value="{{system.status.points}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.shadowRank"}}
    <input name="system.shadow_taint.rank" type="number" value="{{system.shadow_taint.rank}}" data-type="Number" />
  </div>
  <div class="rank-name">
    {{localize "l5r4.ranks.shadowPoints"}}
    <input name="system.shadow_taint.points" type="number" value="{{system.shadow_taint.points}}" data-type="Number" />
  </div>
</section>
<section class="combat-stats">
  <label>
    <div>
      <table class="initiative-table" align="center">
        <tr>
          <th colspan="3"> {{localize "l5r4.mech.init"}} </th>
        </tr>
        <tr>
          <td>{{localize "l5r4.ranks.insightRank"}}+{{localize "l5r4.traits.ref"}}</td>
          <td colspan="2"><input type="text" disabled="true" name="system.initiative.roll"
              value="{{system.insight.rank}}+{{system.traits.ref}}" data-type="String" />
            <br />
          </td>
        <tr>
        <tr>
          <td>{{localize "l5r4.mech.roll"}}/{{localize "l5r4.mech.keep"}} {{localize "l5r4.mech.bonus"}}</td>
          <td><input type="number" name="system.initiative.roll_mod" value="{{system.initiative.roll_mod}}"
              data-type="Number" /></td>
          <td><input type="number" name="system.initiative.keep_mod" value="{{system.initiative.keep_mod}}"
              data-type="Number" /></td>
        </tr>
        <tr>
          <td>{{localize "l5r4.mech.mod"}}</td>
          <td colspan="2"><input type="number" name="system.initiative.total_mod" value="{{system.initiative.total_mod}}"
              data-type="Number" /></td>
        </tr>
        <tr>
          <td colspan="3">{{system.initiative.roll}}k{{system.initiative.keep}}+{{system.initiative.total_mod}}</td>
          </td>
        </tr>
      </table>
      {{> "systems/l5r4/templates/partials/pc-armor-tn.hbs"}}
    </div>
  </label>
</section>