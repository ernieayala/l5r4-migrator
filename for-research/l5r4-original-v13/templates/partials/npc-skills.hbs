<section class="skills panelBorder">
  <h2>
    <div>{{localize "l5r4.sheet.skills"}}</div>
    <a data-action="createItem" data-type="skill" title="{{localize "l5r4.sheet.addSkill"}}">
      <i class="fas fa-plus"></i>
    </a>
  </h2>
  <h3>
    <div>{{localize "l5r4.sheet.skillName"}}</div>
    <div>{{localize "l5r4.skill.rank"}}</div>
    <div>{{localize "l5r4.skill.trait"}}</div>
  </h3>
  {{#each skills as |skill id|}}
  <div class="skill-item item" data-item-id="{{skill._id}}">
    <a class="icon-item" data-action="rollSkill">
      <img title="Roll skill" src="icons/dice/d10black.svg" />
    </a>
    <input class="skill-name" type="text" value="{{skill.name}}" data-action="inlineEdit" data-field="name"
    placeholder="{{localize "l5r4.sheet.skillName"}}" />
    <input class="skill-value" type="number" value="{{skill.system.rank}}" data-action="inlineEdit" data-field="system.rank"
      placeholder="0" data-type="Number">
    <select class="skill-trait" data-action="inlineEdit" data-field="system.trait">
      {{selectOptions @root.config.traits selected=skill.system.trait localize=true}}
    </select>
    <a class="icon-item" data-action="deleteItem">
      <i class="fas fa-trash"></i>
    </a>
  </div>
  {{/each}}
</section>