<div class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
  <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
  <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
      <th>{{localize "l5r4.armor.bonus"}}</th>
      <th>{{localize "l5r4.armor.reduction"}}</th>
      </tr>
      <td>
      <input name="system.bonus" type="number" value="{{item.system.bonus}}" data-type="Number" />
      </td>
      <td>
      <input name="system.reduction" type="number" value="{{item.system.reduction}}" data-type="Number" />
      </td>
    </table>
  </div>
  <div class="editor-sections">
    <div class="editor-section">
      <prose-mirror name="system.description" editable="{{editable}}" value="{{system.description}}"  toggled="true">
        {{{enrichedDescription}}}
      </prose-mirror>
    </div>
  </div>
</div>
