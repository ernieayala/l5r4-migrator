<div class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>{{localize "l5r4.skill.rank"}}</th>
        <th>{{localize "l5r4.skill.school"}}</th>
        <th>{{localize "l5r4.skill.emphasis"}}</th>
      </tr>
      <tr>
        <h3>{{localize "l5r4.skill.type"}}</h3>
        <select name="system.type">
          {{selectOptions config.skillTypes selected=item.system.type localize=true}}
        </select>
      </tr>
      <tr>
        <h3>{{localize "l5r4.skill.trait"}}</h3>
        <select name="system.trait">
          {{selectOptions config.traits selected=item.system.trait localize=true}}
        </select>
      </tr>
      <tr>
        <td>
          <input name="system.rank" type="number" value="{{item.system.rank}}" data-type="Number" />
        </td>
        <td>
          <input name="system.school" type="checkbox" {{checked item.system.school}} data-type="Boolean" />
        </td>
        <td>
          <textarea name="system.emphasis">{{item.system.emphasis}}</textarea>
        </td>
      </tr>
      <tr>
        <th>{{localize "l5r4.skill.mastery3"}}:</th>
        <td colspan="2">
          <textarea name="system.mastery_3">{{item.system.mastery_3}}</textarea>
          </td>
      </tr>
      <tr>
        <th>{{localize "l5r4.skill.mastery5"}}:</th>
        <td colspan="2">
           <textarea name="system.mastery_5">{{item.system.mastery_5}}</textarea>
            </td>
      </tr>
      <tr>
        <th>{{localize "l5r4.skill.mastery7"}}:</th>
        <td colspan="2">
           <textarea name="system.mastery_7">{{item.system.mastery_7}}</textarea>
            </td>
      </tr>
      <tr>
        <th>{{localize "l5r4.skill.insightbonus"}}:</th>
        <td colspan="2"><input name="system.insight_bonus" type="number" value="{{item.system.insight_bonus}}"
            data-type="Number" /></td>
      </tr>
      <tr>
        <th>{{localize "l5r4.mech.roll"}} {{localize "l5r4.mech.bonus"}}:</th>
        <td colspan="2"><input name="system.roll_bonus" type="number" value="{{item.system.roll_bonus}}"
            data-type="Number" /></td>
      </tr>
      <tr>
        <th>{{localize "l5r4.mech.keep"}} {{localize "l5r4.mech.bonus"}}:</th>
        <td colspan="2"><input name="system.keep_bonus" type="number" value="{{item.system.keep_bonus}}"
            data-type="Number" /></td>
      </tr>
      <tr>
        <th>{{localize "l5r4.mech.total"}} {{localize "l5r4.mech.bonus"}}:</th>
        <td colspan="2"><input name="system.total_bonus" type="number" value="{{item.system.total_bonus}}"
            data-type="Number" /></td>
      </tr>
    </table>
  </div>
  <div class="editor-sections">
    <div class="editor-section">
      <h2>{{localize "l5r4.sheet.rulesSummary"}}</h2>
      <prose-mirror name="system.specialRules" editable="{{editable}}" value="{{system.specialRules}}"  toggled="true">
        {{{enrichedSpecialRules}}}
      </prose-mirror>
    </div>
  </div>
</div>