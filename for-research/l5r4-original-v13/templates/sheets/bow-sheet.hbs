<div class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
  <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
  <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
  </header>
  <div class="sheet-content">
  <table>
    <tr>
    <th>{{localize "l5r4.weapon.size"}}</th>
    <th>{{localize "l5r4.weapon.str"}}</th>
    <th>{{localize "l5r4.weapon.range"}}</th>
    <th>{{localize "l5r4.weapon.damage"}}</th>
    <th>{{localize "l5r4.weapon.explodesOn"}}</th>
    </tr>
    <td>
    <input name="system.size" type="text" value="{{item.system.size}}" />
    </td>
    <td>
    <input name="system.str" type="number" value="{{item.system.str}}" data-type="Number" />
    </td>
    <td>
    <input name="system.range" type="number" value="{{item.system.range}}" data-type="Number" />
    </td>
    <h3>{{localize "l5r4.weapon.arrow"}}</h3>
    <select name="system.arrow">
      {{selectOptions config.arrows selected=item.system.arrow localize=true}}
    </select>
    <td>
    {{item.system.damageRoll}}k{{item.system.damageKeep}}
    </td>
    <td>
    <input name="system.explodesOn" type="number" value="{{item.system.explodesOn}}" data-type="Number" />
    </td>
  </table>
  </div>
  <div class="editor-sections">
    <div class="editor-section">
      <prose-mirror name="system.description" editable="{{editable}}" value="{{system.description}}"  toggled="true">
        {{{enrichedDescription}}}
      </prose-mirror>
    </div>
  </div>
</div>